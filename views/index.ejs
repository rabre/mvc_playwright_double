<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calcul Consommation Électricité et Eau Au Club Academy Prémiere étage</title>
    <link rel="stylesheet" href="/css/styles.css">
    <script>
        function toggleInput() {
            var selection = document.getElementById('consumerType').value;
            var damatsInput = document.getElementById('damatsInput');
            var rabreInput = document.getElementById('rabreInput');

            if (selection === 'damats') {
                damatsInput.style.display = 'block';
                rabreInput.style.display = 'none';
            } else if (selection === 'rabre') {
                damatsInput.style.display = 'none';
                rabreInput.style.display = 'block';
            } else {
                damatsInput.style.display = 'none';
                rabreInput.style.display = 'none';
            }
        }
    </script>
</head>
<body>
    <div class="container">
        <h1>Formulaire de Consommation Club Academy R+1</h1>

        <form action="/calculate" method="POST">
            <!-- Kilowatts consommés -->
            <label for="kilowattheure">Kilowattheure total :</label>
            <input type="number" id="kilowattheure" name="kilowattheure" required><br>

            <!-- Charges et redevances -->
            <label for="charge_redevance">Charges et redevances :</label>
            <input type="number" id="charge_redevance" name="charge_redevance" required><br>

            <!-- Menu déroulant pour choisir entre DaMats et Rabre -->
            <label for="consumerType">Choisissez un consommateur :</label>
            <select id="consumerType" name="consumerType" onchange="toggleInput()" required>
                <option value="">Sélectionnez un consommateur</option>
                <option value="damats">Kilowattheures consommés par DaMats</option>
                <option value="rabre">Kilowattheures consommés par Rabre</option>
            </select><br>

            <!-- Champ de saisie pour DaMats (affiché uniquement si sélectionné) -->
            <div id="damatsInput" style="display:none;">
                <label for="damats">Kilowattheures consommés par DaMats :</label>
                <input type="number" id="damats" name="damats"><br>
            </div>

            <!-- Champ de saisie pour Rabre (affiché uniquement si sélectionné) -->
            <div id="rabreInput" style="display:none;">
                <label for="rabre">Kilowattheures consommés par Rabre :</label>
                <input type="number" id="rabre" name="rabre"><br>
            </div>

            <!-- Consommation d'eau en mètres cubes -->
            <label for="water">Consommation d'eau (m³) :</label>
            <input type="number" id="water" name="water" required><br>

            <!-- Boutons de calcul -->
            <button type="submit">Calculer</button>
        </form>
    </div>
</body>
</html>